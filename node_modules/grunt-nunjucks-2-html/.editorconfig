# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = spaces
indent_size = 4

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
